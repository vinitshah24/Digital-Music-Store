<!doctype html>
<html lang="en">
<%- include('common/head.ejs') %>

<body>
    <%- include('common/header.ejs') %>

    <div class="content">
        <main role="main" class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1 col-xs-8 offset-xs-1">
                    <div class="text-center">
                        <h1>About Us</h1>
                    </div>
                    <div id="carouselSlider" class="carousel slide my-5" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselSlider" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselSlider" data-slide-to="1"></li>
                            <li data-target="#carouselSlider" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100"
                                    src="https://images.unsplash.com/photo-1530355647749-0eaafb3e4bcb?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                                    alt="slide1" height="550px">
                                <div class="carousel-caption d-none d-md-block">
                                    <h1 class="mb-5"
                                        style="background-color: black; display: table; margin: 0px auto 0px auto;">
                                        <i>Welcome to Our Store</i></h1>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100"
                                    src="https://images.unsplash.com/photo-1584027377293-40e394594cc4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1351&q=80"
                                    alt="slide2" height="550px">
                                <div class="carousel-caption d-none d-md-block">
                                    <h1 class="mb-5"
                                        style="background-color: black; display: table; margin: 0px auto 0px auto;">
                                        <i>Find Your Favorite Albums</i></h1>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100"
                                    src="https://images.unsplash.com/photo-1565536421966-1e4aec32c7e7?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80"
                                    alt="slide3" height="550px">
                                <div class="carousel-caption d-none d-md-block">
                                    <h1 class="mb-5"
                                        style="background-color: black; display: table; margin: 0px auto 0px auto;">
                                        <i>Upload Your Own Music</i></h1>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselSlider" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselSlider" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('common/footer.ejs') %>
</body>

</html>