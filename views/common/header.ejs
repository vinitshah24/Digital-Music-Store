<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand logo" href="/">MUSIC STORE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
            <div class="navbar-nav ml-auto">
                <a class="nav-item nav-link <%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
                <a class="nav-item nav-link <%= path === '/about' ? 'active' : '' %>" href="/about">About</a>
                <a class="nav-item nav-link <%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>

                <% if (isAuthenticated) { %>
                <a class="nav-item nav-link <%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
                <a class="nav-item nav-link <%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-toggle="dropdown">Admin</a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" <%= path === '/admin/add' ? 'active' : '' %>" href="/admin/add">Add
                            Product</a>
                        <a class="dropdown-item" <%= path === '/admin/products' ? 'active' : '' %>"
                            href="/admin/products">Products</a>
                    </div>
                </div>
                <% } %>
                <% if (!isAuthenticated) { %>
                <a class="nav-item nav-link <%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                <a class="nav-item nav-link <%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                <% } else { %>
                <form action="/logout" method="POST">
                    <!-- CSRF TOKEN FOR FORMS -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-link nav-item nav-link">Logout</button>
                </form>
                <% } %>
            </div>
        </div>
    </nav>
</header>